<h1 class="text-center mt-4">Create a new category</h1>

<div class="container">
  <div class="row justify-content-center">
    <div class="col-10">
      <%= render 'shared/errors', obj: @category %>
      <%= form_with(model: @category, data: { turbo: false }, class: "shadow p-3 mb-3 bg-info rounded") do |form| %>
        <div class="row mb-3">
          <%= form.label :name, "Category name", class: "col-2 col-form-label text-light" %> 
          <div class="col-10">
            <%= form.text_field :name, class: "form-control shadow rounded", placeholder: "Enter a name" %>
          </div>
        </div>
        <div class="col-auto text-center">
            <%= form.submit class: "btn btn-outline-light btn-lg text-smokewhite" %>
        </div>
      <% end %>
      <div class="col-auto text-center"> 
        <%= link_to '[ Cancel and Return to articles list ]', articles_path, class: "text-info", id: 'back_lnk' %>
      </div>    
    </div>
  </div>
</div>
